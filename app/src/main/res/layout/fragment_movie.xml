<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/lib-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

        <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            app:animCircleLoadingView_mainColor= "@android:color/holo_red_dark"
            android:id="@+id/loading"
            app:animCircleLoadingView_secondaryColor= "@android:color/holo_orange_dark"
            app:animCircleLoadingView_textColor= "@android:color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_film" />
    </RelativeLayout>
</layout>